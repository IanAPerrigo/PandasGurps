#:kivy 2.0.0
#:import polygon utility.math.polygon

<Arrow@Image>:
    angle: 0
    source: 'components/gui/textures/arrow.png'
    pos: self.parent.pos
    size_hint: None, None
    size: 32, 32

<Hexagon@Widget>:
    size_hint: None, None
    size: 64, 64
    center: 0, 0

    # hexagon
    Widget:
        size: 32, 32
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Mesh:
                vertices: polygon.regular_polygon_vertices(32, 6, 0, 0)
                indices: polygon.regular_polygon_indices(6)
                mode: 'triangle_fan'

<DirectionArrow>:
    angle: 0
    size_hint: None, None
    size: 32, 32

    canvas.before:
        PushMatrix
        Rotate:
            axis: 0,0,1
            angle: self.angle
            origin: self.center

    canvas.after:
        PopMatrix

    Button:
        background_color: 1, 1, 1, 1
        pos: self.parent.pos
        on_press: root.pressed_callback(args, self.parent.direction)
        size: self.parent.width, self.parent.height

    Arrow:


<MovementTool>:
    id: movement_tool

    GridLayout:
        cols: 1
        size_hint: None, None
        size: 128, 150
        pos: self.parent.pos

        canvas.before:
            Color:
                rgba: .4, .4, .4, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: '[color=000000]Movement[/color]'
            size_hint: None, 0.1
            markup: True

        AnchorLayout:
            pos: self.parent.pos
            size_hint: 1, 0.8

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # white
                Rectangle:
                    pos: self.pos
                    size: self.size


            size: 128, 128
            anchor_x: 'center'
            anchor_y: 'center'

            RelativeLayout:
                size_hint: None, None
                size: 1, 1

                canvas:

