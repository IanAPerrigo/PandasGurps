#:kivy 2.0.0

<ActionDrawer>:
    button_list: action_button_list

    StackLayout:
        Label:
            size_hint: (1, None)
            height: 20
            text: "Actions"

        ScrollView:
            size_hint: (1, .5)
            do_scroll_x: False
            do_scroll_y: True

            StackLayout:
                id: action_button_list
                size_hint: (1, None)
                height: self.minimum_height
                PlayerActionButton:
                    action_type: 'Move'
                    action_callback: root.on_action
                    text: "Move"
                PlayerActionButton:
                    action_type: 'Attack'
                    action_callback: root.on_action
                    text: "Move"
                PlayerActionButton:
                    action_type: 'Move'
                    action_callback: root.on_action
                    text: "Move"

